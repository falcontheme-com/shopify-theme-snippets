<style>
  /* 
    General 
  */
  .ks-pricing-plans {
  }
  .ks-pricing-plans div:empty {
    display: block;
  }

  /* 
    Header 
  */
  .ks-pricing-plans .section-header {
    text-align: center;
    margin: 0 0 16px;
  }
  .ks-pricing-plans .section-header-title {
    margin: 0;
  }
  .ks-pricing-plans .section-header-description {
    margin-top: 6px;
  }

  /* 
    Swiper styling 
  */
  .ks-pricing-plans .swiper {
    --swiper-theme-color: rgba(var(--color-foreground), 0.75);
    --swiper-navigation-size: 16px;
    --swiper-navigation-sides-offset: 0;
    --swiper-pagination-bullet-inactive-color: var(--swiper-theme-color);
    --swiper-pagination-bottom: 4px;
    --swiper-scrollbar-bottom: 0;
    --swiper-scrollbar-bg-color: rgba(var(--color-foreground), 0.1);
    --swiper-scrollbar-drag-bg-color: var(--swiper-theme-color);
    padding: 12px 14px;
    opacity: 0;
    transition: all .2s ease-out;
  }
  .ks-pricing-plans .swiper-initialized {
    opacity: 1;
  }
  .ks-pricing-plans .swiper[swiper-controls-locked="false"] {
    padding-top: 44px;
    padding-bottom: 44px;
    margin-top: -32px;
  }
  .ks-pricing-plans .swiper .swiper-slide {
    height: auto;
  }
  .ks-pricing-plans .swiper [class*="swiper-button"] {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50rem;
    background-color: rgba(var(--color-foreground), 1);
    color: rgba(var(--color-background), 1);
    border: 1px solid rgba(var(--color-foreground), 1);
    box-shadow: 0 0 4px rgba(var(--color-background), .2);
    transition: all .2s ease-out;
  }
  .ks-pricing-plans .swiper .swiper-button-lock {
    display: none !important;
  }
  .ks-pricing-plans .swiper [class*="swiper-button"]:hover,
  .ks-pricing-plans .swiper [class*="swiper-button"]:focus {
    background-color: rgba(var(--color-foreground), 1);
  }
  .ks-pricing-plans .swiper [class*="swiper-button"]::after {
    transition: all .2s ease-out;
  }
  .ks-pricing-plans .swiper .swiper-button-prev:hover::after {
    transform: translateX(-2px);
  }
  .ks-pricing-plans .swiper .swiper-button-next:hover::after {
    transform: translateX(2px);
  }
  .ks-pricing-plans .swiper .swiper-scrollbar {
    max-width: 60%;
    left: 50%;
    transform: translateX(-50%);
  }

  /* 
    Card styling 
  */
  .ks-pricing-plans-card {
    box-sizing: border-box;
    border-style: solid;
    border-color: currentColor;
    padding: 16px;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  .ks-pricing-plans-card-header {
    text-align: center;
  }
  .ks-pricing-plans-card-badge {
    color: white;
    border-radius: 50rem;
    padding: 0;
    margin: 0;
    display: inline-flex;
    padding: 3px 12px;
    font-size: .75em;
    line-height: normal;
    text-transform: uppercase;
    letter-spacing: .2rem;
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%, -50%);
  }
  .ks-pricing-plans-card-icon {
    margin: 12px 0 8px;
  }
  .ks-pricing-plans-card-title {
    margin: 6px 0 0;
  }
  .ks-pricing-plans-card-price {
    font-size: 2em;
    margin: 6px 0;
    line-height: normal;
  }
  .ks-pricing-plans-card-price s {
    font-size: .7em;
    opacity: .5;
  }
  .ks-pricing-plans-card-description {
    font-size: .9em;
  }
  .ks-pricing-plans-card  hr { 
    margin: 16px 0;
    background-color: rgba(var(--color-foreground), .1);
  }
  .ks-pricing-plans-card-body {
    padding-bottom: 24px;
    flex: 1;
  }
  .ks-pricing-plans-card-features {
  }
  .ks-pricing-plans-card-features ul {
    display: inline-flex;
    flex-direction: column;
    padding: 0 24px;
  }
  .ks-pricing-plans-card-features li {
    margin: 5px 0;
    line-height: normal;
  }
  .ks-pricing-plans-card-features[data-has-icons="true"] li {
    display: inline-flex;
    align-items: center;
  }
  .ks-pricing-plans-card-features[data-has-icons="true"] svg {
    margin-right: 8px;
    flex-shrink: 0;
  }
  .ks-pricing-plans-card-features[data-has-icons="true"] .svg-icon-y {
    color: green;
  }
  .ks-pricing-plans-card-features[data-has-icons="true"] .svg-icon-x {
    color: red;
  }
  .ks-pricing-plans-card-button {
    width: 100%;
    box-sizing: border-box;
  }
  .ks-pricing-plans-card-button.button--primary {
    --color-button: var(--color-foreground);
    --color-button-text: var(--color-background);
  }
  .ks-pricing-plans-card-button.button--secondary {
    --color-button: var(--color-background);
    --color-button-text: var(--color-foreground);
  }
  .ks-pricing-plans-card-note {
    text-align: center;
    font-size: .8em;
    margin: 8px 0 -4px;
    line-height: 1.2;
  }
  @media (max-width: 749px) {
    .ks-pricing-plans[data-slider-partial-mobile="true"] .page-width,
    .ks-pricing-plans[data-slider-partial-mobile="true"] .container {
      padding-left: 0;
      padding-right: 0;
    }
    .ks-pricing-plans[data-slider-partial-mobile="true"] .section-header {
      padding-left: 16px;
      padding-right: 16px;
    }
    .ks-pricing-plans[data-slider-partial-mobile="true"] .swiper [class*="swiper-button"] {
      display: none !important; 
    }
  }
  @media (min-width: 750px) {
    
  }
</style>

<style>
  #ks-pricing-plans-{{ section.id }}  {
    --color-background: {{ section.settings.background_color | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --color-foreground: {{ section.settings.foreground_color | color_to_rgb | remove: 'rgb(' | remove: ')' }};
