    }
  }
</style>

<script>
  window.addEventListener('DOMContentLoaded', () => {
    if (!document.querySelector('#swiper-stylesheet')) {
      const stylesheet = document.createElement('link')
      stylesheet.setAttribute('href', 'https://cdn.jsdelivr.net/npm/swiper@11.1.4/swiper-bundle.min.css')
      stylesheet.setAttribute('rel', 'stylesheet')
      stylesheet.setAttribute('id', 'swiper-stylesheet')
      stylesheet.setAttribute('integrity', 'sha256-5nkrwjVsiNfKz3NR1k2h5+qt5pS5SF2u9/TIT1hElow=')
      stylesheet.setAttribute('crossorigin', 'anonymous')
      document.head.appendChild(stylesheet)
    }
    if (!document.querySelector('#swiper-script')) {
      const script = document.createElement('script')
      script.setAttribute('src', 'https://cdn.jsdelivr.net/npm/swiper@11.1.4/swiper-bundle.min.js')
      script.setAttribute('id', 'swiper-script')
      script.setAttribute('integrity', 'sha256-rCACDWCp/VzIh0rsB+ipQCM9XBvO8HNe0fNSOa4sys0=')
      script.setAttribute('crossorigin', 'anonymous')
      document.head.appendChild(script)
    }

    const myInterval = setInterval(() => {
      init()
    }, 500)

    document.addEventListener('shopify:section:load', () => {
      if (event.target.querySelector('.ks-pricing-plans')) {
        init()
      }
    })

    function init () {
      if (!window.Swiper) return
      clearInterval(myInterval)
      const swiperElem = document.querySelector('#ks-pricing-plans-{{ section.id }} .swiper')
  
      const slider = new window.Swiper(swiperElem, {
        rewind: true,
        speed: Number(swiperElem.dataset.sliderSpeed),
        navigation: {
          enabled: swiperElem.dataset.sliderNavigation === 'true',
          prevEl: swiperElem.querySelector('.swiper-button-prev'),
          nextEl: swiperElem.querySelector('.swiper-button-next'),
        },
        pagination: {
          enabled: swiperElem.dataset.sliderPagination === 'true',
          type: 'fraction',
          el: '.swiper-pagination',
          renderFraction: function (currentClass, totalClass) {
            return `<span class="${currentClass}"></span>/<span class="${totalClass}"></span>`
          }
        },
        scrollbar: {
          enabled: swiperElem.dataset.sliderScrollbar === 'true',
          el: '.swiper-scrollbar',
          draggable: true
          // hide: true
        },
        mousewheel: { enabled: true, forceToAxis: true },
        spaceBetween: Number(swiperElem.dataset.sliderSpaceBetween),
        breakpoints: {
          0: { slidesPerView: Number(swiperElem.dataset.breakpointMobile) * (swiperElem.dataset.sliderPartialMobile === 'true' ? 1.2 : 1) },
          750: { slidesPerView: Number(swiperElem.dataset.breakpointTablet) },
          990: { slidesPerView: Number(swiperElem.dataset.breakpointDesktop) }
        },
        on: {
          init: (slider) => {
            if (slider.isLocked) {
              swiperElem.setAttribute('swiper-controls-locked', true)
            } else {
              swiperElem.setAttribute('swiper-controls-locked', false)
            }
          },
          resize: (slider) => {
            if (slider.isLocked) {
              swiperElem.setAttribute('swiper-controls-locked', true)
            } else {
              swiperElem.setAttribute('swiper-controls-locked', false)
            }
          }
        }
      })
    }
  })
</script>
 
<div 
  id="ks-pricing-plans-{{ section.id }}"
  class="ks-pricing-plans {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
  data-slider-partial-mobile="{{ section.settings.slider_partial_mobile }}">
  <div 
    class="page-width container"
    style="max-width: {{ section.settings.container_max_width | append: 'px' }}">
    {% unless section.settings.title == blank and section.settings.description == blank %}
      <div class="section-header">
        {% unless section.settings.title == blank %}
          <h2 class="section-header-title inline-richtext {{ section.settings.title_font_size }}">
            {{ section.settings.title }}
          </h2>
        {% endunless %}
        {% unless section.settings.description == blank %}
          <div class="section-header-description rte">
            {{ section.settings.description }}
          </div>
        {% endunless %}
      </div>
    {% endunless %}
    <div 
      class="swiper"
      data-slider-navigation="{{ section.settings.slider_navigation }}"
      data-slider-pagination="{{ section.settings.slider_pagination }}"
      data-slider-scrollbar="{{ section.settings.slider_scrollbar }}"
      data-slider-partial-mobile="{{ section.settings.slider_partial_mobile }}"
      data-slider-speed="{{ section.settings.slider_speed }}"
      data-slider-space-between="{{ section.settings.slider_space_between }}"
      data-breakpoint-mobile="{{ section.settings.breakpoint_mobile }}"
      data-breakpoint-tablet="{{ section.settings.breakpoint_tablet }}"
      data-breakpoint-desktop="{{ section.settings.breakpoint_desktop }}">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <style>
            #ks-pricing-plans-card-{{ block.id }}  {
              --color-background: {{ block.settings.background_color | color_to_rgb | remove: 'rgb(' | remove: ')' }};
              --color-foreground: {{ block.settings.foreground_color | color_to_rgb | remove: 'rgb(' | remove: ')' }};
              background-color: rgba(var(--color-background), 1);
              color: rgba(var(--color-foreground), 1);
              border-width: {{ block.settings.border_width | append: 'px' }};
              border-color: {{ block.settings.border_color }};
              border-radius: {{ block.settings.border_radius | append: 'px' }};
            }
          </style>
          <div class="swiper-slide" {{ block.shopify_attributes }}>
            <div 
              id="ks-pricing-plans-card-{{ block.id }}"
              class="ks-pricing-plans-card">
              <div class="ks-pricing-plans-card-header">
                {% unless block.settings.badge == blank -%}
                  <p 
                    class="ks-pricing-plans-card-badge"
                    style="background-color: {{ block.settings.badge_color }}">
                    {{ block.settings.badge }}
                  </p>
                {% endunless %}
                {% unless block.settings.icon == blank -%}
                  <p class="ks-pricing-plans-card-icon">
                    <img
                      src="{{ block.settings.icon | image_url: width: block.settings.icon_size }}"
                      alt="{{ block.settings.alt }}"
                      width="{{ block.settings.icon_size }}"
                      height="{{ block.settings.icon_size }}"
                      loading="lazy">
                  </p>
                {% endunless %}
                {% unless block.settings.title == blank %}
                  <h3 class="ks-pricing-plans-card-title {{ block.settings.title_font_size }}">
                    {{ block.settings.title }}
                  </h3>
                {% endunless %}
                {% unless block.settings.price == blank %}
                  <p 
                    class="ks-pricing-plans-card-price" 
                    style="font-size: {{ block.settings.price_font_size | append: 'em' }};">
                    {{ block.settings.price
                      | replace: '[', '<s>'
                      | replace: ']', '</s>' }}
                  </p>
                {% endunless %}
                {% unless block.settings.description == blank %}
                  <div class="ks-pricing-plans-card-description rte">
                    {{ block.settings.description }}
                  </div>
                {% endunless %}
              </div>
              <hr>
              <div class="ks-pricing-plans-card-body">
                {% unless block.settings.features == blank %}
                  <div 
                    class="ks-pricing-plans-card-features rte"
                    data-has-icons="{% if block.settings.features contains '[x]' or block.settings.features contains '[y]' %}true{% else %}false{% endif %}"
                    style="text-align: {{ block.settings.features_text_align }};">
                    {{ block.settings.features
                      | replace: '[y]', '<svg xmlns="http://www.w3.org/2000/svg" class="svg-icon-y" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>' 
                      | replace: '[x]', '<svg xmlns="http://www.w3.org/2000/svg" class="svg-icon-x" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>' 
                    }}
                  </div>
                {% endunless %}
              </div>
              <div class="ks-pricing-plans-card-footer">
                {% unless block.settings.btn_text == blank %}
                  {% if block.settings.product == nil %}
                    <a 
                      href="{{ block.settings.btn_url }}" 
                      class="ks-pricing-plans-card-button button btn {{ block.settings.btn_style }}">
                      {{ block.settings.btn_text }}
                    </a>
                  {% else %}
                    <product-form data-section-id="{{ section.id }}">
                      {%- form 'product', block.settings.product, class: 'form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
                        <input type="hidden" name="id" value="{{ block.settings.variant_id | default: block.settings.product.first_available_variant.id }}">
                        <button 
                          type="submit" 
                          name="add" 
                          class="ks-pricing-plans-card-button button btn {{ block.settings.btn_style }}">
                          <span>{{ block.settings.btn_text }}</span>
                          {%- render 'loading-spinner' -%}
                        </button>
                      {% endform %}
                    </product-form>
                  {% endif %}
                {% endunless %}
                {% unless block.settings.note == blank %}
                  <div class="ks-pricing-plans-card-note rte">
                    {{ block.settings.note }}
                  </div>
                {% endunless %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-controls">
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
        <div class="swiper-pagination"></div>
        <div class="swiper-scrollbar"></div>
      </div>
    </div>
  </div>
</div>

